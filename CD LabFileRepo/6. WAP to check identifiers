to check identifiers in a program.
#include <stdio.h>
#include <ctype.h>
#include <string.h>

// Check if a word is a C keyword (basic list)
int isKeyword(const char *word) {
    const char *keywords[] = {
        "int", "float", "char", "double", "return", "if", "else", "while", "for", "do", "void", "main"
    };
    for (int i = 0; i < sizeof(keywords)/sizeof(keywords[0]); i++) {
        if (strcmp(word, keywords[i]) == 0)
            return 1;
    }
    return 0;
}

// Check if a string is a valid identifier
int isIdentifier(const char *word) {
    if (!isalpha(word[0]) && word[0] != '_')
        return 0;
    for (int i = 1; word[i] != '\0'; i++) {
        if (!isalnum(word[i]) && word[i] != '_')
            return 0;
    }
    return !isKeyword(word);
}

int main() {
    char code[] =
        "int main() {\n"
        "    int a = 10;\n"
        "    float total = 5.5;\n"
        "    char grade = 'A';\n"
        "    int final_score = a + (int)total;\n"
        "    return 0;\n"
        "}\n";

    char word[50];
    int i = 0, j = 0;

    printf("Identifiers found in the code:\n");

    while (code[i] != '\0') {
        if (isalnum(code[i]) || code[i] == '_') {
            word[j++] = code[i];
        } else {
            if (j > 0) {
                word[j] = '\0';
                if (isIdentifier(word)) {
                    printf(" âž¤ %s\n", word);
                }
                j = 0;
            }
        }
        i++;
    }

    return 0;
}
